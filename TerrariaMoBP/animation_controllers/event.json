{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.event": {
			"initial_state": "choose",
			"states": {
				"choose": {
					"transitions": [
						{
							"goblin_army": "math.random(0, 10)>0.0 && math.random(0, 10)<0.1 && query.time_stamp>v.time+100000"
						},
						{
							"blood_moon": "math.random(0, 10)>0.1 && math.random(0, 10)<0.2 && query.time_stamp>v.time+10000"
						},
						{
							"rain": "math.random(0, 10)>0.2 && math.random(0, 10)<3.0 && query.time_stamp>v.time+10000"
						},
						{
							"slime_rain": "math.random(0, 10)>0.3 && math.random(0, 10)<4.0 && query.time_stamp>v.time+10000"
						}
					],
					"on_entry": [
						"v.time = q.time_stamp;"
					]
				},
				"blood_moon": {
					"on_entry": [
						"/function blood_moon"
					],
					"transitions": [
						{
							"choose": "query.all_animations_finished"
						}
					]
				},
				"goblin_army": {
					"on_entry": [
						"/function goblin_army"
					],
					"transitions": [
						{
							"choose": "query.all_animations_finished"
						}
					]
				},
				"rain": {
					"on_entry": [
						"/function rain"
					],
					"transitions": [
						{
							"choose": "query.all_animations_finished"
						}
					]
				},
				"slime_rain": {
					"on_entry": [
						"/function slime_rain"
					],
					"transitions": [
						{
							"choose": "query.all_animations_finished"
						}
					]
				}
			}
		}
	}
}