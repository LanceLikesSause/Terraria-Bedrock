//bridge-file-version: #142
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.music": {
			"initial_state": "wait",
			"states": {
				"wait": {
					"transitions": [
						{
							"default": "query.life_time>10"
						}
					]
				},
				"default": {
					"transitions": [
						{
							"forest_night_music": "query.biome_has_any_tag('purity_forest') && query.time_of_day<0.25 || query.time_of_day>0.75"
						},
						{
							"forest_day_music": "query.biome_has_any_tag('purity_forest') && query.time_of_day>0.25 || query.time_of_day<0.75"
						},
						{
							"desert_music": "query.biome_has_any_tag('purity_desert')"
						},
						{
							"jungle_music": "query.biome_has_any_tag('purity_jungle')"
						},
						{
							"corruption_music": "query.biome_has_any_tag('corruption')"
						}
					],
					"on_entry": [
						"/stopsound @s"
					]
				},
				"forest_day_music": {
					"on_entry": [
						"/music play dayone 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_forest') && query.all_animations_finished"
						}
					]
				},
				"forest_night_music": {
					"on_entry": [
						"/music play night 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_forest') && query.all_animations_finished"
						}
					]
				},
				"corruption_music": {
					"on_entry": [
						"/music play corruption 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('corruption') && query.all_animations_finished"
						}
					]
				},
				"jungle_music": {
					"on_entry": [
						"/music play jungle 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_jungle') && query.all_animations_finished"
						}
					]
				},
				"desert_music": {
					"on_entry": [
						"/music play desert 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_desert') && query.all_animations_finished"
						}
					]
				}
			}
		}
	}
}