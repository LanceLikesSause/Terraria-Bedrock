{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.event": {
			"initial_state": "choose",
			"states": {
				"choose": {
					"transitions": [
						{
							"goblin_army": "math.random(0, 3)>0 && math.random(0, 3)<1 && query.scoreboard('ammo')>0 && query.scoreboard('lcrystals')>0 "
						},
						{
							"blood_moon": "math.random(0, 10)>1 && math.random(0, 10)<2 && query.time_stamp>v.time+18000 && query.scoreboard('lcrystals')>10"
						},
						{
							"slime_rain": "math.random(0, 10)>3 && math.random(0, 10)<4 && query.time_stamp>v.time+30000"
						}
					],
					"on_entry": [
						"v.time = q.time_stamp;"
					]
				},
				"blood_moon": {
					"on_entry": [
						"/function blood_moon"
					],
					"transitions": [
						{
							"choose": "query.time_stamp>v.time+1"
						}
					]
				},
				"goblin_army": {
					"on_entry": [
						"/function goblin_army"
					],
					"transitions": [
						{
							"choose": "query.time_stamp>v.time+1"
						}
					]
				},
				"slime_rain": {
					"on_entry": [
						"/function slime_rain"
					],
					"transitions": [
						{
							"choose": "query.time_stamp>v.time+1"
						}
					]
				}
			}
		}
	}
}