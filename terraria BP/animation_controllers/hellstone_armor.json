{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.hellstone_armor": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "shoot": "query.get_equipped_item_name=='hellstone_chestplate'"
                        }
                    ],
                    "on_entry": [
                        "variable.startTime = query.time_stamp;"
                    ]
                },
                "shoot": {
                    "transitions": [
                        {
                            "default": "(query.time_stamp - variable.startTime) > 3"
                        }
                    ],
                    "on_entry": [
                        "variable.startTime = query.time_stamp;",
                        "/say it worked"
                    ]
                }
            }
        }
    }
}