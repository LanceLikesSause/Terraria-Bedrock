//bridge-file-version: #221
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.music": {
			"initial_state": "wait",
			"states": {
				"wait": {
					"transitions": [
						{
							"default": "query.life_time>10"
						}
					]
				},
				"default": {
					"transitions": [
						{
							"forest_night_music": "query.biome_has_any_tag('purity_forest') && query.time_of_day<0.25 || query.time_of_day>0.75 && query.position(1)>50"
						},
						{
							"forest_day_music": "query.biome_has_any_tag('purity_forest') && query.time_of_day>0.25 || query.time_of_day<0.75 && query.position(1)>50"
						},
						{
							"desert_music": "query.biome_has_any_tag('purity_desert') && query.position(1)>50"
						},
						{
							"jungle_music": "query.biome_has_any_tag('purity_jungle') && query.position(1)>50"
						},
						{
							"corruption_music": "query.biome_has_any_tag('corruption') && query.position(1)>50"
						},
						{
							"underground_music": "query.position(1)<50"
						},
						{
							"snow_music": "query.biome_has_any_tag('purity_snow') && query.position(1)>50"
						},
						{
							"crimson_music": "query.biome_has_any_tag('crimson') && query.position(1)>50"
						}
					],
					"on_entry": [
						"/stopsound @s"
					]
				},
				"forest_day_music": {
					"on_entry": [
						"/playsound dayone @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+1340 || !query.biome_has_any_tag('purity_forest') || query.position(1)<50 || query.time_of_day==0.75"
						}
					]
				},
				"forest_night_music": {
					"on_entry": [
						"/playsound night @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+1340 || !query.biome_has_any_tag('purity_forest') || query.position(1)<50 || query.time_of_day==0.25\r"
						}
					]
				},
				"corruption_music": {
					"on_entry": [
						"/playsound corruption @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+1520 || !query.biome_has_any_tag('corruption') || query.position(1)<50 "
						}
					]
				},
				"jungle_music": {
					"on_entry": [
						"/playsound jungle @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+1620 || !query.biome_has_any_tag('purity_jungle') || query.position(1)<50 "
						}
					]
				},
				"desert_music": {
					"on_entry": [
						"/playsound desert @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+1780 || !query.biome_has_any_tag('purity_desert') || query.position(1)<50 "
						}
					]
				},
				"underground_music": {
					"on_entry": [
						"/playsound underground @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+3580 || query.position(1)>50 "
						}
					]
				},
				"snow_music": {
					"on_entry": [
						"/playsound snow @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+1880 || !query.biome_has_any_tag('purity_snow') || query.position(1)<50 "
						}
					]
				},
				"crimson_music": {
					"on_entry": [
						"/playsound crimson @s",
						"v.time = q.time_stamp;"
					],
					"transitions": [
						{
							"default": "query.time_stamp>v.time+2540 || !query.biome_has_any_tag('crimson') || query.position(1)<50 "
						}
					]
				}
			}
		}
	}
}