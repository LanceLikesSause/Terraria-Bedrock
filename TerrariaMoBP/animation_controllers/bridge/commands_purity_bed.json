//bridge-file-version: #3
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.bridge_purity_bed.execute_commands": {
			"states": {
				"default": {
					"transitions": [
						{
							"execute_command_id_2": "query.skin_id == 2"
						},
						{
							"execute_command_id_1": "query.skin_id == 1"
						}
					]
				},
				"execute_command_id_1": {
					"transitions": [
						{
							"default": "query.skin_id != 1"
						}
					],
					"on_entry": [
						"/spawnpoint @e[type=player,r=3] ~~~",
						"/say Spawnpoint set",
						"/tickingarea add ~~~ ~~~ bed",
						"@s bridge:remove_command_id_1",
						"/weather clear"
					]
				},
				"execute_command_id_2": {
					"transitions": [
						{
							"default": "query.skin_id != 2"
						}
					],
					"on_entry": [
						"/tickingarea remove_all",
						"/say Removed spawnpoints",
						"@s bridge:remove_command_id_2"
					]
				}
			}
		}
	}
}