{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.nurse_death": {
			"states": {
				"default": {
					"transitions": [
						{
							"spawn_next_stage": "!query.is_alive && query.last_hit_by_player"
						}
