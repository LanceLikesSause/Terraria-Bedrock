//bridge-file-version: #159
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.music": {
			"initial_state": "wait",
			"states": {
				"wait": {
					"transitions": [
						{
							"default": "query.life_time>10"
						}
					]
				},
				"default": {
					"transitions": [
						{
							"forest_night_music": "query.biome_has_any_tag('purity_forest') && query.time_of_day<0.25 || query.time_of_day>0.75 && query.position(1)>35"
						},
						{
							"forest_day_music": "query.biome_has_any_tag('purity_forest') && query.time_of_day>0.25 || query.time_of_day<0.75 &&  query.position(1)>35"
						},
						{
							"desert_music": "query.biome_has_any_tag('purity_desert') &&  query.position(1)>35"
						},
						{
							"jungle_music": "query.biome_has_any_tag('purity_jungle') &&  query.position(1)>35"
						},
						{
							"corruption_music": "query.biome_has_any_tag('corruption') &&  query.position(1)>35"
						},
						{
							"underground_music": "query.position(1)<35"
						},
						{
							"snow_music": "query.biome_has_any_tag('purity_snow') &&  query.position(1)>35"
						},
						{
							"crimson_music": "query.biome_has_any_tag('crimson') &&  query.position(1)>35"
						}
					],
					"on_entry": [
						"/stopsound @s",
						"/music stop"
					]
				},
				"forest_day_music": {
					"on_entry": [
						"/music play dayone 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_forest') || query.position(1)<35 && query.all_animations_finished "
						}
					]
				},
				"forest_night_music": {
					"on_entry": [
						"/music play night 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_forest') || query.position(1)<35 && query.all_animations_finished "
						}
					]
				},
				"corruption_music": {
					"on_entry": [
						"/music play corruption 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('corruption') || query.position(1)<35 && query.all_animations_finished "
						}
					]
				},
				"jungle_music": {
					"on_entry": [
						"/music play jungle 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_jungle') && query.all_animations_finished"
						}
					]
				},
				"desert_music": {
					"on_entry": [
						"/music play desert 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_desert') || query.position(1)<35 && query.all_animations_finished "
						}
					]
				},
				"underground_music": {
					"on_entry": [
						"/music play underground 1 1 loop"
					],
					"transitions": [
						{
							"default": "query.position(1)>35 && query.all_animations_finished "
						}
					]
				},
				"snow_music": {
					"on_entry": [
						"/music play snow 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('purity_snow') || query.position(1)<35 && query.all_animations_finished "
						}
					]
				},
				"crimson_music": {
					"on_entry": [
						"/music play crimson 1 1 loop"
					],
					"transitions": [
						{
							"default": "!query.biome_has_any_tag('crimson') || query.position(1)<35 && query.all_animations_finished "
						}
					]
				}
			}
		}
	}
}